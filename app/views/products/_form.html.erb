<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(@product) do |f| %>
      <%= f.error_notification %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :image_url %>
      <%= f.input :price %>
      <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
