  <div class="container">
    <div class="row">
      <% @products %>
        <div class="col-xs-12 col-sm-4">
        <%= render "card", product: @product %>
        </div>
        <div class="col-xs-12 col-sm-8">
          <% @product.photos.each do |photo| %>
          <%= cl_image_tag photo.path, width: 263, height: 175, crop: :fill %>
          <% end %>
          </div>

          <div class="col-xs-12 col-sm-12">
          <p><strong>Prix: </strong><%= @product.price %></p>
          <p><strong>Marque: </strong><%= @product.marque %></p>
          <p><strong>Adresse: </strong><%= @product.address %></p>
          <p><strong>Taille: </strong><%= @product.taille %></p>
          <p><strong>Etat: </strong><%= @product.etat %></p>
          <p><strong>Couleur: </strong><%= @product.couleur %></p>
          <p><strong>Mati√®re: </strong><%= @product.matiere %></p>
          <p><strong>Marque: </strong><%= @product.marque %></p>
          <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-primary" %> |
          <%= link_to 'Back', products_path, class:"btn btn-danger" %>
        </div>

    </div>
</div>

