<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= product.image_url %>);">
  <div class="card-category">
      <div class="card-link">
      </div>
  </div>
  <div class="card-description">
    <p><%= product.category %></p>
    <h2><%= product.title %><%= product.marque %></h2>
    <p><%= product.description %></p>
    <p style="color:red"><%= product.price %>euros</p>
  </div>
    <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
       <%= link_to "", product_path(product), class: "card-link" %>
</div>


